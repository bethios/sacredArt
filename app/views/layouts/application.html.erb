<!DOCTYPE html>
<html>
<head>
  <title>Sacred Art</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://fonts.googleapis.com/css?family=Josefin+Sans" rel="stylesheet">
  <link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel=stylesheet>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav>
  <%= link_to image_tag("sa_logo_small.png", :alt => "Sacred Art Logo", :class => "logo"), index_path %>

  <i class="ion-navicon-round" data-toggle="collapse" data-target="#mobile"></i>
  <div id="mobile" class="collapse">
    <ul class="mobile-menu">
      <li ><%= link_to "ABOUT", about_path %></li>
      <li ><%= link_to "ARTISTS", categories_path %></li>
      <!-- <li ><%= link_to "SHOP" %></li> -->
      <li ><%= link_to "NEWS", new_path %></li>
      <li ><%= link_to "FAQ", faqs_path %></li>
      <li ><%= link_to "SUBMISSIONS", submissions_path %></li>
      <li ><%= link_to "CONTACT", contact_path %></li>
    </ul>
  </div>

  <ul class="nav-links">
    <li class="nav-li"><%= link_to "ABOUT", about_path %></li>
    <li class="dropdown-parent nav-li"><%= link_to "ARTISTS", categories_path %>
      <div class="dropdown-body">
        <%= link_to "ORIGINAL ART", '/categories/1' %>
        <%= link_to "PRINTS", '/categories/2'  %>
        <%= link_to "STATIONERY", '/categories/3'  %>
        <%= link_to "JEWELRY", '/categories/4'  %>
        <%= link_to "WEARABLES", '/categories/5'  %>
        <%= link_to "HOME & SELF CARE", '/categories/6'  %>
      </div>
    </li>
    <!-- <li class="nav-li"><%= link_to "SHOP" %></li> -->
    <li class="nav-li"><%= link_to "NEWS", new_path %></li>
    <li class="nav-li"><%= link_to "FAQ", faqs_path %></li>
    <li class="nav-li"><%= link_to "SUBMISSIONS", submissions_path %></li>
    <li class="nav-li"><%= link_to "CONTACT", contact_path %></li>
  </ul>
</nav>

<% if current_user %>
    <div class="signed-in">
      Signed in as: <%= current_user.name %> --- <%= link_to "Admin Page", admin_path, :class => 'btn
      btn-success btn-small' %>
      --- <%= link_to "Sign Out", session_path(current_user), method: :delete, :class => 'btn btn-danger btn-small' %>
    </div>
<% end %>

<% if flash[:notice] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %>
    </div>
<% elsif flash[:alert] %>
    <div class="alert alert-warning">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
    </div>
<% end %>

<%= yield %>

<div class="footer">
  <div class="row">
  <div class="col-sm-4 footer-col">
    <%= render partial: 'welcome/address' %>
    <%= render partial: 'welcome/social' %>
  </div>
  <div class="col-sm-4 footer-col">
    <%= render partial: 'welcome/hours' %>
  </div>
  <div class="col-sm-4 footer-col">
    <%= render partial: 'welcome/mailinglist' %>
  </div>
  </div>
</div>

<script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-22905850-1', 'auto');
    ga('send', 'pageview');

</script>
</body>
</html>

